{
    "name": "Ully",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Manage your ully collections on google chrome.",
    "homepage_url": "https://ully.in",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/socket.io/socket.io.js",
            "js/underscore/underscore.min.js",
            "src/bg/context_menu.js",
            "src/bg/background.js"
        ],
        "persistent": false
    },
    "options_page": "options/index.html",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Ully",
        "default_popup": "src/browser_action/popup.html"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "https://ully.in/api/*"
    ],
    "omnibox": {
        "keyword": "ully"
    }
}
